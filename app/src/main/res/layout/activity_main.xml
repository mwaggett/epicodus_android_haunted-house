<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".MainActivity"
                android:background="@android:color/black">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_text"
        android:id="@+id/startText"
        android:layout_centerHorizontal="true"
        android:textColor="#3a6460"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/houseImage"
        android:layout_above="@+id/hallwayButton"
        android:layout_centerHorizontal="true"
        android:src="@drawable/house_front"
        android:layout_below="@+id/startText"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/inventory"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#3a6460"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room"
        android:id="@+id/roomButton"
        android:layout_above="@+id/inventory"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:width="100dp"
        android:textColor="#3a6460"
        android:backgroundTint="#9e9681"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hallway"
        android:id="@+id/hallwayButton"
        android:layout_above="@+id/inventory"
        android:layout_centerHorizontal="true"
        android:width="100dp"
        android:backgroundTint="#9e9681"
        android:textColor="#3a6460"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Staircase"
        android:id="@+id/staircaseButton"
        android:layout_above="@+id/inventory"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:width="100dp"
        android:backgroundTint="#9e9681"
        android:textColor="#3a6460"/>
</RelativeLayout>
